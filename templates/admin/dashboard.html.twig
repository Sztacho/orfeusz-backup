{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-sm-12 mt-3">
                <div class="card text-center text-bg-grey">
                    <div class="card-body">
                        <h5 class="card-title">{{ 'User list' | trans }}</h5>
                        <p class="card-text number-count-object"><i class="fas fa-users"></i> {{ users }}</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-12 mt-3">
                <div class="card text-center text-bg-grey">
                    <div class="card-body">
                        <h5 class="card-title">{{ 'Count of added anime' | trans }}</h5>
                        <p class="card-text number-count-object"><i class="fas fa-video"></i> {{ anime }}</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-12 mt-3">
                <div class="card text-center text-bg-grey">
                    <div class="card-body">
                        <h5 class="card-title">{{ 'Count of added articles' | trans }}</h5>
                        <p class="card-text number-count-object"><i class="fas fa-list"></i> {{ article }}</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-12 mt-3">
                <div class="card text-center text-bg-grey">
                    <div class="card-body">
                        <h5 class="card-title">{{ 'Count of added episodes' | trans }}</h5>
                        <p class="card-text number-count-object"><i class="fas fa-film"></i> {{ episodes }}</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-12 mt-3">
                <div class="card text-center text-bg-grey">
                    <div class="card-body">
                        <h5 class="card-title"> {{ 'Episodes translated this month' | trans }}</h5>
                        <p class="card-text number-count-object"><i
                                    class="fas fa-play"></i> {{ episodeTranslatedAtThisMonth }}</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-12 mt-3">
                <div class="card text-center text-bg-grey">
                    <div class="card-body">
                        <h5 class="card-title"> {{ 'Comments to check' | trans }}</h5>
                        <p class="card-text number-count-object"><i
                                    class="fa-fw fas fa-comment {% if commentToCheck > 0 %}fa-bounce{% endif %}"></i> {{ commentToCheck }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}